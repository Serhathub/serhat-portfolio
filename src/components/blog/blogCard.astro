---
import { HiArrowRight } from "react-icons/hi";

export interface Props {
  title: string;
  image: string;
  tags: string[];
  slug: string;
  date: string;
  index: number; 
}

const { title, image, tags, slug, index, date } =
  Astro.props;
---
<a 
  href={`/blog/${slug}`} 
  class="block"
  data-index={index}
  data-tags={tags?.map(t => t.toLowerCase()).join(" ") ?? ""}
>
  <div
   class="project-card flex w-[300px] flex-col overflow-hidden rounded-lg bg-gray-900 shadow-lg transition-transform hover:scale-[1.01] lg:w-[320px] drop-shadow-[4px_4px_0_#75B7E5] h-[400px]">
    <img
      src={image}
      alt={`image of blog ${title}`}
      class="h-50 w-full rounded-2xl object-cover p-3"
    />
    <div class="flex grow flex-col px-3 pb-3">
      <h3 class="text-xl font-semibold text-white drop-shadow-[1px_1px_0_#75B7E5]">{title}</h3>

      <div class="my-1.5 flex flex-wrap gap-2">
        {
          tags.map((tag) => (
            <span class="rounded-md bg-[#75B7E5]/20 text-[#5A0E27] px-2 py-0.5 text-xs font-semibold">
              {tag}
            </span>
          ))
        }
      </div>

      {date && <p class="text-gray-400 text-xs mt-1">Date: {date}</p>}

      <div class="mt-auto flex justify-between">
      <span class="group text-primary mt-6 flex items-center justify-start p-0 font-bold text-lg">
        Read
        <HiArrowRight
          className="ml-1 transition-transform duration-200 group-hover:translate-x-1"
          size={18}
        />
      </span>
      </div>
    </div>
  </div>
</a>
